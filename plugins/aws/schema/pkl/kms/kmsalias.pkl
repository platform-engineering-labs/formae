module aws.kms.alias

import "@formae/formae.pkl"
import "../aws.pkl"

const type = "AWS::KMS::Alias"

open class AliasResolvable extends formae.Resolvable {
    type = module.type
}

@aws.ResourceHint {
    type = module.type
    identifier = "Ref"
    discoverable = false
    extractable = true
}
open class Alias extends formae.Resource {

    @aws.FieldHint
    aliasName: String(matches(Regex(#"^(alias/)[a-zA-Z0-9:/_-]+$"#)))

    @aws.FieldHint
    targetKeyId: String|formae.Resolvable

    hidden parent = this

    hidden res: AliasResolvable = new {
        label = parent.label
        stack = parent.stack?.label
    }
}