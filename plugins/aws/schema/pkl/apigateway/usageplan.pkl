module aws.apigateway.usageplan

import "@formae/formae.pkl"
import "../aws.pkl"

const type = "AWS::ApiGateway::UsagePlan"


@aws.SubResourceHint
open class ApiStage extends formae.SubResource {
    apiId: String?
    stage: String?
    throttle: Mapping<String, Any>?
}

@aws.SubResourceHint
open class UsagePlanQuotaSettings extends formae.SubResource {
    limit: Int?
    offset: Int?
    period: String?
}

open class UsagePlanResolvable extends formae.Resolvable {
    hidden type = module.type

    hidden id: UsagePlanResolvable = (this) {
        property = "Id"
    }
}

@aws.SubResourceHint
open class ThrottleSettings extends formae.SubResource {
    burstLimit: Int?
    rateLimit: Number?
}

@aws.ResourceHint {
    type = module.type
    identifier = "Id"
    tags = "Tags"
}
open class UsagePlan extends formae.Resource {

    @aws.FieldHint
    apiStages: Listing<ApiStage>?

    @aws.FieldHint
    description: String?

    @aws.FieldHint
    quota: UsagePlanQuotaSettings?

    @aws.FieldHint
    tags: Listing<formae.Tag>?

    @aws.FieldHint
    throttle: ThrottleSettings?

    @aws.FieldHint
    usagePlanName: String?

    local parent = this

    hidden res: UsagePlanResolvable = new {
        label = parent.label
        stack = parent.stack?.label
    }
}
