module aws.apigateway.deployment

import "@formae/formae.pkl"
import "../aws.pkl"

const type = "AWS::ApiGateway::Deployment"

@aws.SubResourceHint
open class AccessLogSetting extends formae.SubResource {
    destinationArn: String?
    format: String?
}

@aws.SubResourceHint
open class CanarySetting extends formae.SubResource {
    percentTraffic: Number?
    stageVariableOverrides: Mapping<String, Any>?
    useStageCache: Boolean?
}

@aws.SubResourceHint
open class MethodSetting extends formae.SubResource {
    cacheDataEncrypted: Boolean?
    cacheTtlInSeconds: Int?
    cachingEnabled: Boolean?
    dataTraceEnabled: Boolean?
    httpMethod: String?
    loggingLevel: String?
    metricsEnabled: Boolean?
    resourcePath: String?
    throttlingBurstLimit: Int?
    throttlingRateLimit: Number?
}

@aws.SubResourceHint
open class StageDescription extends formae.SubResource {
    accessLogSetting: AccessLogSetting?
    cacheClusterEnabled: Boolean?
    cacheClusterSize: String?
    cacheDataEncrypted: Boolean?
    cacheTtlInSeconds: Int?
    cachingEnabled: Boolean?
    canarySetting: CanarySetting?
    clientCertificateId: String?
    dataTraceEnabled: Boolean?
    description: String?
    documentationVersion: String?
    loggingLevel: String?
    methodSettings: Listing<MethodSetting>?
    metricsEnabled: Boolean?
    tags: Listing<formae.Tag>?
    throttlingBurstLimit: Int?
    throttlingRateLimit: Number?
    tracingEnabled: Boolean?
    variables: Mapping<String, Any>?
}

open class DeploymentResolvable extends formae.Resolvable {
    hidden type = module.type

    hidden id: DeploymentResolvable = (this) {
        property = "DeploymentId"
    }

    hidden deploymentId: DeploymentResolvable = (this) {
        property = "DeploymentId"
    }
}

@aws.ResourceHint {
    type = module.type
    identifier = "DeploymentId"
    tags = ""
    parent = "AWS::ApiGateway::RestApi"
    listParam = new formae.ListProperty { parentProperty = "RestApiId" listParameter = "RestApiId" }
}
open class Deployment extends formae.Resource {

    @aws.FieldHint{
        createOnly = true
        writeOnly = true
    }
    deploymentCanarySettings: CanarySetting?

    @aws.FieldHint{createOnly = true}
    description: String?

    @aws.FieldHint{createOnly = true}
    restApiId: String|formae.Resolvable

    @aws.FieldHint{
        createOnly = true
        writeOnly = true
    }
    stageDescription: StageDescription?

    @aws.FieldHint{
        createOnly = true
        writeOnly = true
    }
    stageName: String?

    local parent = this

    hidden res: DeploymentResolvable = new {
        label = parent.label
        stack = parent.stack?.label
    }
}
