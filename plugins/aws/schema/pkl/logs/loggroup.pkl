module aws.logs.loggroup

import "@formae/formae.pkl"
import "../aws.pkl"

const type = "AWS::Logs::LogGroup"

typealias LogGroupClassType = "STANDARD"|"INFREQUENT_ACCESS"|"DELIVERY"

open class LogGroupResolvable extends formae.Resolvable {
    hidden type = module.type

    hidden arn: LogGroupResolvable = (this) {
        property = "Arn"
    }

    hidden logGroupName: LogGroupResolvable = (this) {
        property = "LogGroupName"
    }

    hidden name: LogGroupResolvable = (this) {
        property = "LogGroupName"
    }

    hidden ref: LogGroupResolvable = (this) {
        property = "Ref"
    }
}

@aws.ResourceHint {
    type = module.type
    identifier = "Arn"
    tags = "Tags"
}
open class LogGroup extends formae.Resource {

    @aws.FieldHint
    dataProtectionPolicy: Dynamic?

    @aws.FieldHint
    fieldIndexPolicies: Listing<Dynamic>?

    @aws.FieldHint
    kmsKeyId: (String|formae.Resolvable)?

    @aws.FieldHint
    logGroupClass: LogGroupClassType?

    @aws.FieldHint
    logGroupName: String

    // FIXME typealias RetentionPeriodDays = 1|3|5|7|14|30|60|90|120|150|180|365|400|545|731|1096|1827|2192|2557|2922|3288|3653
    @aws.FieldHint
    retentionInDays: Int?

    @aws.FieldHint
    tags: Listing<formae.Tag>?
}
