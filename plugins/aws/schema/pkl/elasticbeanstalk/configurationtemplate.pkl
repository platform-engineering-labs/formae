module aws.elasticbeanstalk.configurationtemplate

import "@formae/formae.pkl"
import "../aws.pkl"

const type = "AWS::ElasticBeanstalk::ConfigurationTemplate"

@aws.SubResourceHint
open class ConfigurationOptionSetting extends formae.SubResource {
    namespace: String
    optionName: String
    resourceName: String?
    value: String?
}

@aws.SubResourceHint
open class SourceConfiguration extends formae.SubResource {
    applicationName: String
    templateName: String
}

@aws.ResourceHint {
    type = module.type
    identifier = "ApplicationName"
}
open class ConfigurationTemplate extends formae.Resource {

    @aws.FieldHint{createOnly = true}
    applicationName: String

    @aws.FieldHint
    description: String?

    @aws.FieldHint{
        createOnly = true
        writeOnly = true
    }
    environmentId: (String|formae.Resolvable)?

    @aws.FieldHint
    optionSettings: Listing<ConfigurationOptionSetting>?

    @aws.FieldHint{createOnly = true}
    platformArn: (String|formae.Resolvable)?

    @aws.FieldHint{createOnly = true}
    solutionStackName: String?

    @aws.FieldHint{
        createOnly = true
        writeOnly = true
    }
    sourceConfiguration: SourceConfiguration?
}
