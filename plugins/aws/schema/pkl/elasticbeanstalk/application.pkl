module aws.elasticbeanstalk.application

import "@formae/formae.pkl"
import "../aws.pkl"

const type = "AWS::ElasticBeanstalk::Application"

@aws.SubResourceHint
open class ResourceLifecycleConfig extends formae.SubResource {
    serviceRole: (String|formae.Resolvable)?
    versionLifecycleConfig: VersionLifecycleConfig?
}

@aws.SubResourceHint
open class VersionLifecycleConfig extends formae.SubResource {
    maxAgeRule: MaxAgeRule?
    maxCountRule: MaxCountRule?
}

@aws.SubResourceHint
open class MaxAgeRule extends formae.SubResource {
    deleteSourceFromS3: Boolean?
    enabled: Boolean?
    maxAgeInDays: Int?
}

@aws.SubResourceHint
open class MaxCountRule extends formae.SubResource {
    deleteSourceFromS3: Boolean?
    enabled: Boolean?
    maxCount: Int?
}

@aws.ResourceHint {
    type = module.type
    identifier = "ApplicationName"
}
open class Application extends formae.Resource {

    @aws.FieldHint{createOnly = true}
    applicationName: String?

    @aws.FieldHint
    description: String?

    @aws.FieldHint
    resourceLifecycleConfig: ResourceLifecycleConfig?
}
