module aws.ec2.customergateway

import "@formae/formae.pkl"
import "../aws.pkl"

const type = "AWS::EC2::CustomerGateway"

@aws.ResourceHint {
    type = module.type
    identifier = "CustomerGatewayId"
    tags = "Tags"
}
open class CustomerGateway extends formae.Resource {
    @aws.FieldHint{createOnly = true}
    bgpAsn: Int?

    @aws.FieldHint{createOnly = true}
    bgpAsnExtended: Number?

    @aws.FieldHint{createOnly = true}
    certificateArn: (String(matches(Regex(#"^arn:(aws[a-zA-Z-]*)?:acm:[a-z]{2}((-gov)|(-iso([a-z]{1})?))?-[a-z]+-\d{1}:\d{12}:certificate\/[a-zA-Z0-9-_]+$"#))))?

    @aws.FieldHint{createOnly = true}
    deviceName: String?

    @aws.FieldHint{createOnly = true}
    ipAddress: String

    @aws.FieldHint
    tags: Listing<formae.Tag>?

    @aws.FieldHint
    type: String
}
