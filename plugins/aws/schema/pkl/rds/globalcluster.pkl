module aws.rds.globalcluster

import "@formae/formae.pkl"
import "../aws.pkl"

const type = "AWS::RDS::GlobalCluster"

typealias Engine = "aurora"|"aurora-mysql"|"aurora-postgresql"

@aws.SubResourceHint
open class Endpoint extends formae.SubResource {
    address: String?
}

@aws.ResourceHint {
    type = module.type
    identifier = "GlobalClusterIdentifier"
}
open class GlobalCluster extends formae.Resource {

    @aws.FieldHint
    deletionProtection: Boolean?

    @aws.FieldHint{createOnly = true}
    engine: Engine?

    @aws.FieldHint
    engineLifecycleSupport: String?

    @aws.FieldHint
    engineVersion: String?

    @aws.FieldHint{createOnly = true}
    globalClusterIdentifier: (String(matches(Regex(#"^[a-zA-Z]{1}(?:-?[a-zA-Z0-9]){0,62}$"#))))?

    @aws.FieldHint
    globalEndpoint: Endpoint?

    @aws.FieldHint{createOnly = true}
    sourceDBClusterIdentifier: (String|formae.Resolvable)?

    @aws.FieldHint{createOnly = true}
    storageEncrypted: Boolean?

    @aws.FieldHint
    tags: Listing<formae.Tag>?
}