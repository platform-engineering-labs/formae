/*
 * FakeAWS SecretsManager Secret - minimal copy for testing.
 */
module fakeaws.secretsmanager.secret

import "@formae/formae.pkl"
import "../fakeaws.pkl"

const type = "FakeAWS::SecretsManager::Secret"

open class SecretResolvable extends formae.Resolvable {
    hidden type = module.type

    hidden id: SecretResolvable = (this) {
        property = "Id"
    }

    hidden arn: SecretResolvable = (this) {
        property = "Arn"
    }

    hidden secretString: SecretResolvable = (this) {
        property = "SecretString"
    }
}

@fakeaws.ResourceHint {
    type = module.type
    identifier = "Id"
}
open class Secret extends formae.Resource {
    @fakeaws.FieldHint
    name: String?

    @fakeaws.FieldHint
    description: String?

    @fakeaws.FieldHint
    secretString: (String|formae.Value)?

    @fakeaws.FieldHint
    tags: Listing<fakeaws.Tag>?

    local parent = this

    hidden res: SecretResolvable = new {
        label = parent.label
        stack = parent.stack?.label
    }
}
