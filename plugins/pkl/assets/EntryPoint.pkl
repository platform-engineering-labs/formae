amends "@formae/forma.pkl"
import "@formae/formae.pkl"
import "@aws/aws.pkl"

properties {
  name = new formae.Prop {
    flag = "name"
    default = "my-name"
  }
}

forma {
  new formae.Stack {
    label = "my-stack"
    description = "Stack for my resources"
  }

  new formae.Target {
    label = "my-default-aws-target"
    config = new aws.Config {
      region = "us-east-2"
    }
  }

  // My Resources
}