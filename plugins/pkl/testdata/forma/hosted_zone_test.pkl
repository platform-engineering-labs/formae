amends "@formae/forma.pkl"
import "@formae/formae.pkl"
import "@aws/aws.pkl"
import "@aws/route53/hostedzone.pkl"

properties {
  name = new formae.Prop {
    flag = "name"
    default = "snarf.platform.engineering"
  }
}

forma {
  local stack = new formae.Stack {
    label = "pel-dns"
    description = "Stack for PEL DNS records"
  }
  stack

  local target = new formae.Target {
    label = "default-aws-target"
    config = new aws.Config {
      region = "us-west-2"
    }
  }
  target

  new hostedzone.HostedZone {
    label = "pel-zone"
    name = properties.name.value
  }
}