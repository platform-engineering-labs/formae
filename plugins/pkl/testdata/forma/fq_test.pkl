amends "@formae/forma.pkl"
import "@formae/formae.pkl"
import "@formae/debug/debug.pkl"
import "@aws/aws.pkl"
import "@aws/secretsmanager/secret.pkl"
import "pkl:reflect"

properties {
  name = new formae.Prop {
    flag = "name" // flag from --help
    default = "fq-test"
  }
}

forma {
  new formae.Stack {
    label = "fq-test"
    description = "Stack for FQ tests"
  }
  new formae.Target {
    label = "default-aws-target"
    config = new aws.Config {
      region = "us-west-2"
    }
  }

  new debug.Consumer {
    label = "fq-debug"
    value = formae.fq.schema(reflect.Class(secret.Secret)).toDynamic()
  }
}