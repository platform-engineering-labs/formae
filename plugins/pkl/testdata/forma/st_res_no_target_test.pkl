amends "@formae/forma.pkl"
import "@formae/formae.pkl"
import "@fakeaws/sqs/queue.pkl"

properties {
  name = new formae.Prop {
    flag = "name"
    default = "st-res-test"
  }
}

forma {
  new formae.StackResolvable {
    label = "st-res-test-stack"
  }

  new queue.Queue {
    label = "sqs-queue"
    queueName = properties.name.value + "queue"
    visibilityTimeout = 300.s
  }
}