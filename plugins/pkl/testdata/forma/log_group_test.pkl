amends "@formae/forma.pkl"
import "@formae/formae.pkl"
import "@aws/aws.pkl"
import "@aws/logs/loggroup.pkl"

properties {
  name = new formae.Prop {
    flag = "name"
    default = "pel-lg-test-group"
  }
}

forma {
  new formae.Stack {
    label = "pel-lgs"
    description = "Stack for Log groups"
  }

  new formae.Target {
    label = "default-aws-target"
    config = new aws.Config {
      region = "us-west-2"
    }
  }

  new loggroup.LogGroup {
    label = "lg-group"
    logGroupName = properties.name.value
    logGroupClass = "STANDARD"
    retentionInDays = 3
  }
}