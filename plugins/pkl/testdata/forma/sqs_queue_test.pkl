amends "@formae/forma.pkl"
import "@formae/formae.pkl"
import "@aws/aws.pkl"
import "@aws/sqs/queue.pkl"

properties {
  name = new formae.Prop {
    flag = "name"
    default = "pel-sqs-test-queue"
  }
}

forma {
  new formae.Stack {
    label = "pel-queue"
    description = "Stack for sqs queues"
  }

  new formae.Target {
    label = "dev-aws-target"
    config = new aws.Config {
      region = "us-west-2"
      profile = "dev"
    }
  }

  new queue.Queue {
    label = "sqs-queue"
    queueName = properties.name.value
    visibilityTimeout = 300.s
  }
}