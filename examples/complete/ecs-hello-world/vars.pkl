import "@formae/formae.pkl"
import "@aws/aws.pkl"

projectName = "ecs-hello-world"
region = "eu-central-1"

vpcLabel = "ecs-vpc"

regionProp = new formae.Prop {
    flag = "region"
    default = region
}

stack: formae.Stack = new {
    label = "ecs-hello-world"
    description = "Stack for ECS Hello World deployment"
}

target: formae.Target = new formae.Target {
    label = "default-aws-target"
    config = new aws.Config {
        region = module.regionProp.value
    }
}