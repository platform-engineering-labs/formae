import "@formae/formae.pkl"
import "@aws/aws.pkl"

projectName = "rds-hello-world"
region = "eu-central-1"
availabilityZone1 = "eu-central-1a"
availabilityZone2 = "eu-central-1b"

vpcLabel = "rds-vpc"

regionProp = new formae.Prop {
    flag = "region"
    default = region
}

stack: formae.Stack = new {
    label = "pel-rds-hello-world"
    description = "Stack for RDS Hello World deployment"
}

target: formae.Target = new formae.Target {
    label = "default-aws-target"
    config = new aws.Config {
        region = module.region
    }
}